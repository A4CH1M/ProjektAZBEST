{% extends 'base.html.twig' %}

{% block title %}
    Plan zajęć
{% endblock %}

{% block stylesheets %}
{#  możliwy include, whatever  #}
{% endblock %}

{% block body %}

    {% block controls %}
        {% include 'controls/controls.html.twig' %}
        {% include 'controls/switches.html.twig' %}
    {% endblock %}

    {% block callendar %}
        {% include 'calendar/calendar.html.twig' %}
    {% endblock %}

    {% block filters %}
        {% set filters = [
            { id: 'filter_teacher', label: 'Wykładowca', name: 'filter_teacher', placeholder: 'Podaj wykładowcę' },
            { id: 'filter_student', label: 'Nr albumu', name: 'filter_student', placeholder: 'Podaj numer albumu' },
            { id: 'filter_course', label: 'Przedmiot', name: 'filter_course', placeholder: 'Podaj przedmiot' },
            { id: 'filter_faculty', label: 'Wydział', name: 'filter_faculty', placeholder: 'Podaj wydział' },
            { id: 'filter_room', label: 'Sala', name: 'filter_room', placeholder: 'Podaj salę' },
            { id: 'filter_grup', label: 'Grupa', name: 'filter_group', placeholder: 'Podaj grupę' },
            { id: 'filter_form', label: 'Forma zajęć', name: 'filter_form', placeholder: 'Podaj formę zajęć' }
        ] %}
        {% for filter in filters %}
            {% include 'filters/filter_field.html.twig' with filter %}
        {% endfor %}
    {% endblock %}
{% endblock %}